<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>{{title}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>type</th>
                        <th>description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{type}}</td>
                            <td>{{description}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>